<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ThemeActivity">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@animator/slide_in_from_left</item>
        <item name="android:activityOpenExitAnimation">@animator/slide_in_from_right</item>
        <item name="android:activityCloseEnterAnimation">@animator/slide_out_from_left</item>
        <item name="android:activityCloseExitAnimation">@animator/slide_out_from_right</item>
    </style>
</resources>
